# Server Public IP or Domain (Required)
# If set to 'auto', it will try to detect the public IP.
# For specific servers (like your 101.x.x.x), put the IP here.
WG_HOST=auto

# WireGuard Port (UDP)
WG_PORT=51820

# Web Dashboard Port (TCP)
WEBUI_PORT=3000

# WireGuard Subnet
# The internal IP range for VPN clients
WG_SUBNET=10.252.1.0

# Timezone
TZ=Asia/Jakarta

# Admin Password (only used on first run if database is empty)
# Note: Currently the app uses a default 'password', change it in the UI.
# This var is reserved for future auto-provisioning.
ADMIN_PASSWORD=password

# Cookie Settings
# Set to 'true' ONLY if you are serving over HTTPS.
# If using HTTP (like IP address), leave as 'false'.
COOKIE_SECURE=false
